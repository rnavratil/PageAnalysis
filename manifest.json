{
  "manifest_version": 2,
  "name": "Page Analysis",
  "version": "1.0",
  
  "description": "Text analyzer on the current webpage.",
  "icons": {
    "48": "icons/logo-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "<all_urls>",
    "tabs",
    "unlimitedStorage"
  ],

  "background":{
    "scripts": ["background_scripts/background_script.js"]
  },

  "browser_action": {
    "default_icon": "icons/logo-48.png",
    "default_title": "Page Analysis",
    "default_popup": "popup/page_analysis.html"
  },

  "options_ui": {
    "open_in_tab": true,
    "page": "options/options_page.html"
  }
}