{
  "manifest_version": 2,
  "name": "Page Analysis",
  "version": "1.0",
  
  "description": "Web extension for text analysis",
  "icons": {
    "48": "icons/logo-48.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/logo-48.png",
    "default_title": "Page Analysis",
    "default_popup": "popup/page_analysis.html"
  },

  "options_ui": {
    "page": "options/options_page.html"
  }
}